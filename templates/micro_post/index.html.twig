{% extends 'base.html.twig' %}

{% block title %}All Posts!{% endblock %}

{% block body %}
<div>
    {% if posts|length %}
        {% for post in posts %}
            <div>
                <a href={{ path('app_micro_post_show', {microPost: post.id}) }}>{{ post.title }}</a>
            </div>
        {% endfor %}
    {% else %}
        Nothing
    {% endif %}
</div>
{% endblock %}
